@using eShopSolution.ViewModels.Catalog.ProductImages
@model System.Linq.IOrderedEnumerable<ProductImageVm>

@{
    ViewData["Title"] = "DeleteImage";
}
 

<div>
    <div class="pagetitle">
        <h1>Xóa ảnh</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Danh sách sản phẩm</li>
                <li class="breadcrumb-item active">Xóa ảnh</li>
            </ol>
        </nav>
    </div>
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between">
            <a class="btn btn-outline-success" asp-action="Index" asp-controller="Product">Về danh sách</a>
            @Html.ActionLink("Thêm ảnh", "AddImage", new { id = ViewBag.Id }, new {@class = "btn btn-outline-warning"})


        </div>

        <div class="card-body">
                <div class="iconslist">
       
                        @foreach (var img in Model)
                        {
                            <div class="icon">
                            <img style="
                                                width: 60px;
                                                height: 60px;
                                            " src="data:image/jpeg;base64,@(img.Data != null ? Convert.ToBase64String(img.Data) : "")"
                                 alt="File Image" />
                                <form asp-action="DeleteImage">
                                <div class="label">
                                    <label for="request.Id" >sinh tố dâu</label>
                                    <input for="request.Id" name="request.Id" type="text" value="@img.Id" hidden />
                                </div>
                            <input type="submit" value="Xóa" class="btn btn-outline-danger" />
                                </form>
                            </div>
                        }
           
        
                </div>
                </div>
    
    
   
</div>
